{
    "manifest_version": 3,
    "name": "Pomodoro",
    "description": "Pomodoro Timer",
    "version": "3.0",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "alarms",
        "activeTab",
        "tabs",
        "webRequest"

     
    ],
    "action":{
        "default_popup": "popup.html"
    }
    
    
}